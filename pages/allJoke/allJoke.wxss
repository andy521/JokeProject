
page {
    height: 100%;
}

.navbar {
    display: flex;
    background: #fff;
    height: 80rpx;
}

.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 80rpx;
}

.navbar .item.active {
    color: red;
}

.navbar .item.active:after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4rpx;
    background: red;
}

/* 文字笑话 */

.recommend {
  margin: 20rpx;
}

.recommend .item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
    background: #fff;
}

.recommend .allInfo {
    background: white;
    position: relative;
    width:100%;
    border: 2rpx solid #fc4524;
}

.recommend .allInfo .count {
    position: absolute;
    top: 10rpx;
    left: 20%;
    font-size: 28rpx;
    line-height: 1;
    text-align: center;
    color: black;
    opacity: 1.2;
}

 .recommend .allInfo .title {
   padding-top: 50rpx;
   font-size: 30rpx;  
   color: gray;
} 

/*图片笑话*/
.topList {
  margin: 20rpx;
}

.topList .item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
    background: #fff;
   
}
.topList .media {
    position: relative;
    background: rebeccapurple;
    height: 300rpx;
}
.topList .media .count {
    position: absolute;
    top: 10rpx;
    left: 10rpx;
    font-size: 24rpx;
    color: #fff;
    opacity: 0.6;
}
.topList .media .picture {
   height: 300rpx;
}
.img{
  width: 100%;
  height: 100%;
}